<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity"
    android:background="@color/colorAccent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="308dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="32dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    app:srcCompat="@drawable/splash_logo"  tools:ignore="ContentDescription"/>

                <EditText
                    android:id="@+id/sign_up_first_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="First Name"
                    android:textColor="@color/colorAccent"
                    android:background="@drawable/email_background"
                    android:padding="5dp"
                    android:textSize="18sp"
                    android:drawableLeft="@drawable/left_space_background"
                    android:drawableRight="@drawable/left_space_background"
                    android:textAllCaps="false"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView4"
                    app:layout_constraintVertical_bias="0.0" />

                <EditText
                    android:id="@+id/sign_up_last_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="Last Name"
                    android:textColor="@color/colorAccent"
                    android:background="@drawable/email_background"
                    android:padding="5dp"
                    android:textSize="18sp"
                    android:textAllCaps="false"
                    android:drawableLeft="@drawable/left_space_background"
                    android:drawableRight="@drawable/left_space_background"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/sign_up_first_name"
                    app:layout_constraintVertical_bias="0.0" />

                <EditText
                    android:id="@+id/sign_up_email_or_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:ems="10"
                    android:hint="Email or phone number"
                    android:textColor="@color/colorAccent"
                    android:background="@drawable/email_background"
                    android:padding="5dp"
                    android:textSize="18sp"
                    android:textAllCaps="false"
                    android:inputType="textEmailAddress"
                    android:drawableLeft="@drawable/left_space_background"
                    android:drawableRight="@drawable/left_space_background"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/sign_up_last_name"
                    app:layout_constraintVertical_bias="0.0" />

                <EditText
                    android:id="@+id/sign_up_password"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:ems="10"
                    android:hint="Password (At list 8 character)"
                    android:background="@drawable/email_background"
                    android:padding="5dp"
                    android:textSize="18sp"
                    android:textColor="@color/colorAccent"
                    android:textAllCaps="false"
                    android:inputType="textPassword"
                    android:drawableLeft="@drawable/left_space_background"
                    android:drawableRight="@drawable/left_space_background"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/sign_up_email_or_phone" />

                <ProgressBar
                    android:id="@+id/sign_up_progress_bar"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:visibility="invisible"
                    android:theme="@style/ProgressBar"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/sign_up_password"
                    app:layout_constraintVertical_bias="0.0" />

                <Button
                    android:id="@+id/sign_up_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginTop="32dp"
                    android:text="Sign Up"
                    android:textAllCaps="false"
                    android:background="@drawable/registration_btn"
                    android:paddingStart="30dp"
                    android:paddingEnd="30dp"
                    android:textSize="16sp"
                    android:textColor="@color/colorAccent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/sign_up_progress_bar"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/all_ready_have_an_account_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="24dp"
                    android:text="Already have an account ! please sign in"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/whiteColor"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/sign_up_btn"
                    app:layout_constraintVertical_bias="0.0" />

            </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


</RelativeLayout>